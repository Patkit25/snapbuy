<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="20dp">

        <!-- Sign Up Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fill in the details and create your new account."
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_marginBottom="20dp"/>

        <!-- Full Name Input -->
        <EditText
            android:id="@+id/fullNameEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Full Name"
            android:padding="10dp"
            android:background="@drawable/input_field_bg"
            android:textColor="@color/black"/>

        <!-- Email Input -->
        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email"
            android:padding="10dp"
            android:background="@drawable/input_field_bg"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10dp"/>

        <!-- Password Input -->
        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Password"
            android:padding="10dp"
            android:background="@drawable/input_field_bg"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"/>

        <!-- Confirm Password Input -->
        <EditText
            android:id="@+id/confirmPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Confirm Password"
            android:padding="10dp"
            android:background="@drawable/input_field_bg"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"/>

        <!-- Privacy Policy Checkbox -->
        <CheckBox
            android:id="@+id/privacyPolicyCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I have read and agree to the Privacy Policy"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/signUpButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Sign Up"
            android:backgroundTint="@color/green"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="15dp"/>

        <!-- Social Login -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or Sign Up with"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/facebookSignUp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/facebook_icon"
                android:layout_margin="10dp"/>

            <ImageView
                android:id="@+id/googleSignUp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/google_icon"
                android:layout_margin="10dp"/>

            <ImageView
                android:id="@+id/appleSignUp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/apple_icon"
                android:layout_margin="10dp"/>
        </LinearLayout>

        <!-- Already have an account? -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? Sign In"
            android:textSize="14sp"
            android:textColor="@color/green"
            android:layout_marginTop="15dp"
            android:id="@+id/signInText"/>
    </LinearLayout>
</ScrollView>
