<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_green"
        tools:context=".HomeActivity">

    <!-- ðŸ”¹ Parent Vertical Layout -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="8dp">

        <!-- ðŸ”¹ Welcome User & Profile Section -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="@color/white">

            <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Hello, User"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

            <ImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_profile"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_bg"
                    android:contentDescription="User Profile"/>
        </LinearLayout>

        <!-- ðŸ”¹ Search Bar -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/search_background"
                android:padding="10dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:elevation="4dp">

            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_search"
                    android:contentDescription="Search Icon"/>

            <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:minHeight="48dp"
                    android:paddingVertical="12dp"
                    android:paddingStart="16dp"
                    android:hint="Search groceries..."
                    android:textSize="16sp"
                    android:importantForAccessibility="yes"/>
        </LinearLayout>

        <!-- ðŸ”¹ Categories List -->
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="16dp"
                android:scrollbars="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_category"/>

        <!-- ðŸ”¹ Grocery List -->
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvGroceryList"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:clipToPadding="false"/>
    </LinearLayout>

    <!-- ðŸ”¹ Floating Action Buttons (FAB) -->
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:orientation="vertical">

        <!-- ðŸ”¹ Scan Receipt Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnScanReceipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:src="@drawable/ic_scan"
                app:backgroundTint="@color/orange"
                android:contentDescription="Scan Receipt"/>

        <!-- ðŸ”¹ Add Grocery Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnAddGrocery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add"
                app:backgroundTint="@color/green"
                android:contentDescription="Add Grocery"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
